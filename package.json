{
	"name": "coblock",
	"displayName": "coblock",
	"description": "Create a block comment to describe a step in Python code, YAML config and more",
	"version": "0.1.2",
	"publisher": "vict0rsch",
	"engines": {
		"vscode": "^1.38.0"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/vict0rsch/coblock/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vict0rsch/coblock.git"
	},
	"homepage": "https://github.com/vict0rsch/coblock",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:python",
		"onLanguage:yaml",
		"onLanguage:ssh_config",
		"onLanguage:properties",
		"onLanguage:perl",
		"onLanguage:powershell",
		"onLanguage:ruby",
		"onLanguage:shellscript"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
				"command": "extension.coblockInput",
				"title": "Block Comment from Input"
			},
			{
				"command": "extension.coblockLine",
				"title": "Line to Block Comment"
			}
		],
		"keybindings": [{
			"command": "extension.coblockLine",
			"key": "ctrl+shift+k",
			"mac": "cmd+shift+k",
			"when": "editorTextFocus"
		}]
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	}
}