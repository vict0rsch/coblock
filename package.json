{
	"name": "coblock",
	"displayName": "coblock",
	"description": "Create a block comment to describe a step in Python, Java, Javascript code, YAML config and many more",
	"version": "0.4.1",
	"publisher": "vict0rsch",
	"engines": {
		"vscode": "^1.38.0"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/vict0rsch/coblock/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vict0rsch/coblock.git"
	},
	"homepage": "https://github.com/vict0rsch/coblock",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:python",
		"onLanguage:bat",
		"onLanguage:c",
		"onLanguage:c",
		"onLanguage:clojure",
		"onLanguage:coffeescript",
		"onLanguage:cpp",
		"onLanguage:csharp",
		"onLanguage:css",
		"onLanguage:dockerfile",
		"onLanguage:go",
		"onLanguage:html",
		"onLanguage:java",
		"onLanguage:java",
		"onLanguage:javascript",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:jsonc",
		"onLanguage:latex",
		"onLanguage:less",
		"onLanguage:lua",
		"onLanguage:makefile",
		"onLanguage:matlab",
		"onLanguage:objective-c",
		"onLanguage:objective-cpp",
		"onLanguage:perl",
		"onLanguage:php",
		"onLanguage:php",
		"onLanguage:powershell",
		"onLanguage:properties",
		"onLanguage:r",
		"onLanguage:ruby",
		"onLanguage:rust",
		"onLanguage:scala",
		"onLanguage:scss",
		"onLanguage:shellscrip",
		"onLanguage:sql",
		"onLanguage:ssh_config",
		"onLanguage:swift",
		"onLanguage:swift",
		"onLanguage:xml",
		"onLanguage:yaml"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
				"command": "coblock.input",
				"title": "Block Comment from Input"
			},
			{
				"command": "coblock.line",
				"title": "Line to Block Comment"
			}
		],
		"keybindings": [{
			"command": "coblock.line",
			"key": "ctrl+shift+k",
			"mac": "cmd+shift+k",
			"when": "editorTextFocus"
		}],
		"configuration": {
			"title": "Coblock's configuration",
			"properties": {
				"coblock.spaceAround": {
					"type": "integer",
					"default": 1,
					"description": "How many spaces around the comment's text (=horizontal margin)",
					"maximum": 100,
					"minimum": 0
				},
				"coblock.boxCharacter": {
					"type": "string",
					"default": "-",
					"maxLength": 1,
					"description": "What character to draw the box with (only give one, any more would be ignored)"
				},
				"coblock.numBlankLines": {
					"type": "integer",
					"default": 0,
					"maximum": 100,
					"minimum": 0,
					"description": "How many blank lines around the comment's text (=vertical margin)"
				},
				"coblock.boxHeight": {
					"type": "integer",
					"default": 1,
					"maximum": 100,
					"minimum": 0,
					"description": "How many lines of Box Characters around the comment's text (=vertical border height)"
				},
				"coblock.boxWidth": {
					"type": "integer",
					"default": 5,
					"maximum": 100,
					"minimum": 0,
					"description": "How many Box Characters around the comment's text (=horizontal border width)"
				},
				"coblock.preferBlockComment": {
					"type": "boolean",
					"default": false,
					"description": "When possible (according to language), use block over inline comments syntax"
				},
				"coblock.layout": {
					"type": "string",
					"default": "alignLeft",
					"enum": ["left", "center", "right"],
					"description": "How to align your content inside a multiline block (left, center, right)"
				}
			}
		}
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	}
}